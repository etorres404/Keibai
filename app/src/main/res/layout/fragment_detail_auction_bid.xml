<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.auction.DetailAuctionBidFragment"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_auction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"/>

        <TextView
            android:id="@+id/remaining_auction_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remaining_auction_time_placeholder"
            android:textSize="20sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/highest_bid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_placeholder"
            android:layout_centerInParent="true"
            android:textSize="80sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/auction_user_credit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auction_user_credit_placeholder"
        android:padding="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bid_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bid" />

        <EditText
            android:id="@+id/edit_text_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="00.01"/>

        <SeekBar
            android:id="@+id/seek_bar_bid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="50" />

    </LinearLayout>

    <Button
        android:id="@+id/bid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bid"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bid_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
